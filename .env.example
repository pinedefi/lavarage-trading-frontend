# Application Configuration
VITE_APP_NAME="BSC Trading Platform"
VITE_APP_DESCRIPTION="Decentralized leverage trading on BSC"

# WalletConnect Configuration
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Get your WalletConnect project ID from https://cloud.walletconnect.com/
# Example: VITE_WALLETCONNECT_PROJECT_ID=a89196bc65e44a9694119505981bbfb

# Birdeye API Configuration
VITE_BIRDEYE_API_KEY=your_birdeye_api_key_here

# Get your Birdeye API key from https://docs.birdeye.so/
# Example: VITE_BIRDEYE_API_KEY=your_api_key_here

# API Configuration
VITE_API_URL=https://api.lavarage.com/api/sdk/v1.0
VITE_API_KEY=your_api_key_here

# Blockchain Configuration
VITE_BSC_RPC_URL=https://bsc-dataseed1.binance.org/
VITE_BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# Network Configuration
VITE_DEFAULT_NETWORK=bsc
VITE_CHAIN_ID=1

# Trading Configuration
VITE_MAX_LEVERAGE=100
VITE_DEFAULT_LEVERAGE=10
VITE_MIN_POSITION_SIZE=0.001
VITE_MAINTENANCE_MARGIN_RATE=0.005

# Feature Flags
VITE_ENABLE_TESTNET=false
VITE_ENABLE_MOCK_TRADING=true
VITE_ENABLE_PRICE_FEEDS=true

# Analytics (optional)
VITE_ANALYTICS_ID=

# Sentry Error Tracking (optional)
VITE_SENTRY_DSN=

# API Configuration (if needed)
VITE_API_BASE_URL=https://api.example.com